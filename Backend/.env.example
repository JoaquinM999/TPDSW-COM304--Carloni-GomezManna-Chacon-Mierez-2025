# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379

# External API Keys (optional - for enhanced features)
# NeutrinoAPI - for bad word filtering
NEUTRINO_USER_ID=your_neutrino_user_id
NEUTRINO_API_KEY=your_neutrino_api_key

# Hardcover API - for book data
HARDCOVER_TOKEN=your_hardcover_api_token

# Google Books API - for book search
GOOGLE_BOOKS_API_KEY=your_google_books_api_key

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173
