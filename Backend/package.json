{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "overrides": {
    "js-yaml": "^4.1.1"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc --skipLibCheck",
    "seed:sagas": "npm run build && node dist/seed-sagas.js",
    "create:admin": "ts-node-dev src/scripts/create-admin-user.ts",
    "fix:autores": "ts-node-dev --transpile-only fix-autores.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --testNamePattern=\"unit\"",
    "test:integration": "vitest run --testNamePattern=\"integration\"",
    "test:e2e": "vitest run --testNamePattern=\"e2e\""
  },
  "dependencies": {
    "@mikro-orm/cli": "6.5.9",
    "@mikro-orm/core": "6.5.9",
    "@mikro-orm/migrations": "6.5.9",
    "@mikro-orm/mysql": "6.5.9",
    "@mikro-orm/postgresql": "^6.5.2",
    "@tailwindcss/vite": "^4.1.11",
    "@types/nodemailer": "^7.0.4",
    "axios": "^1.11.0",
    "bad-words": "^4.0.0",
    "bcrypt": "^6.0.0",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.1",
    "mikro-orm": "^6.4.12",
    "ms": "^2.1.3",
    "mysql2": "^3.5.0",
    "natural": "^8.1.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.11",
    "reflect-metadata": "^0.1.13",
    "sentiment": "^5.0.2",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@types/bad-words": "^3.0.3",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^24.10.4",
    "@types/node-fetch": "^2.6.13",
    "@types/sentiment": "^5.0.4",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "jest": "^29.7.0",
    "madge": "^8.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.16"
  }
}
