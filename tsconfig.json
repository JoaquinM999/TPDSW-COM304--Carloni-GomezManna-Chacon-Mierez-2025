{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/*", "./Backend/src/*"]
    },
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./Backend/src/types"], 
    "outDir": "./dist"
  },
  "include": ["./Backend/src/**/*.ts"],
  "exclude": ["./node_modules", "dist"]
}
