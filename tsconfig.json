{
  "compilerOptions": {
    "target": "ES2020",  // Puede ser ES2020 o superior
    "module": "ESNext",  // Usar ESNext para poder usar decoradores y top-level await
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,  // Habilitar soporte para decoradores
    "emitDecoratorMetadata": true,   // Emitir metadatos para decoradores
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
